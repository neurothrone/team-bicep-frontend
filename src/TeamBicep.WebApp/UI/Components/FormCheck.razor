<div class="form-check">
    <input class="form-check-input" type="checkbox" id="checkDefault"
           checked="@IsChecked"
           @onclick="() => IsChecked = !IsChecked">
    <label class="form-check-label" for="checkDefault">
        Default checkbox
    </label>
</div>

@code {
    [Parameter] public bool IsChecked { get; set; }
}
